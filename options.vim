" OPTIONS
set clipboard="unnamedplus"

" files
set backup!
set swapfile!
set fileencoding="utf-8"
set undofile
set undodir="$HOME/.vim/undodir"

" search
set ignorecase
set smartcase
set incsearch

" ui
set splitbelow
set splitright

" editing
set smartindent
set updatetime=50
set expandtab
set shiftwidth=4
set tabstop=4
set iskeyword+=-
set whichwrap+=<,>,[,],h,l

